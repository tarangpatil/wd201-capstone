<section class="flex flex-col items-center">
  <p class="w-full px-8">-Actions</p>
  <div class="w-full py-4 flex">
    <a
      href="/courses/new"
      class="py-2 px-4 bg-cyan-200 border-cyan-900 border rounded cursor-pointer my-2 min-w-48 mx-8"
    >
      Create new course
    </a>
    <a
      class="py-2 px-4 bg-green-200 border-cyan-900 border rounded cursor-pointer my-2 min-w-48"
    >
      Reports
    </a>
  </div>
  <p class="w-full px-8">-Your Courses</p>
  <div class="w-full px-12 py-4 grid grid-cols-4">
    <% myCourses.forEach(course => { %> <%-
    include("courses/courseCard",{...course}) %> <% }) %>
  </div>
</section>
