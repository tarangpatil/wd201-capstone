<section class="flex flex-col items-center">
  <p class="w-full px-8">-Enrolled Courses</p>
  <% if(enrolledCourses.length === 0) { %>
  <p
    class="w-[80%] px-20 text-xl italic text-center rounded-lg bg-slate-300 my-6 py-2"
  >
    You haven't enrolled in any course
  </p>
  <% } else { %>
  <div class="w-full px-12 py-4 grid grid-cols-4">
    <% enrolledCourses.forEach(course => { %> <%-
    include("courses/courseCard",{...course,enrolled:true}) %> <% }); %>
  </div>
  <% } %>
  <p class="w-full px-8">-Available Courses</p>
  <div class="w-full px-12 py-4 grid grid-cols-4">
    <% newCourses.forEach(course=> { %> <%-
    include("courses/courseCard",{...course, enrolled:false}) %> <% }) %>
  </div>
</section>
